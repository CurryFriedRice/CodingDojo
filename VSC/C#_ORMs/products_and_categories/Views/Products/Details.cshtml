<div class="container d-flex">
    <h1 class="halfContainer text-right border-right">Products</h1>
    <h1 class="halfContainer"><a asp-action="" asp-controller="categories">Categories</a> </h1>
</div>

<h1 class="container text-center">@ViewBag.Product.Name</h1>


@model ProductCategories

<div class="container d-flex ">
    <div class="halfContainer border-right">
        <h1 class="text-center">Categories</h1>
        <ul>
        @foreach (var Product in ViewBag.Product.ProdCat)
        {
            <li>@Product.Category.Name</li>
        }
        </ul>
    </div>
    <div class="halfContainer">
        <h1 class="text-center">Add Categories</h1>
        <form asp-action="categorize" asp-controller="products" class="d-flex flex-column">
            <span asp-validation-for="ProductID" class="text-warning"></span>
            <input hidden asp-for="ProductID" value=@ViewBag.Product.ProductID>

            <select asp-for="CategoryID">
                @foreach (var item in ViewBag.ValidCategories)
                {
                    <option value=@item.CategoryID>@item.Name</option>
                }
            </select>
            <button>Submit</button>
        </form>
    </div>
</div>