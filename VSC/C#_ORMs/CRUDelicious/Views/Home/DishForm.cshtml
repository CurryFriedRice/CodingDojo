@{
    ViewData["Title"] = "Create a dish";
}
@model DishModel
<div class="container">
<form method="POST" asp-action="create" asp-controller="Dish">
<span asp-validation-for="Name" class="mt-3"></span>
<div class="d-flex justify-content-between mt-1">
    <label asp-for="Name"></label>
    <input asp-for="Name"  class="fixedWidth">
</div>


<span asp-validation-for="Chef" class="mt-3"></span>
<div class="d-flex justify-content-between mt-1">

    <label asp-for="Chef"></label>
    <input asp-for="Chef" class="fixedWidth">
</div>

<span asp-validation-for="Tastiness" class="mt-3"></span>
<div class="d-flex justify-content-between mt-1">
    <label asp-for="Tastiness"></label>
    <select asp-for="Tastiness" class="fixedWidth">
        <option value=1>1</option>
        <option value=1>2</option>
        <option value=1>3</option>
        <option value=1>4</option>
        <option value=1>5</option>
    </select>
</div>

<span asp-validation-for="Calories" class="mt-3"></span>
<div class="d-flex justify-content-between mt-1">
    <label asp-for="Calories"></label>
    <input asp-for="Calories"  class="fixedWidth">
</div>
<span asp-validation-for="Description" class="mt-3"></span>
<div class="d-flex justify-content-between mt-1">

    <label asp-for="Description"></label>
    <textarea asp-for="Description"  class="fixedWidth"></textarea>
</div>



<button class="btn btn-primary">Submit</button>
</form>

</div>
