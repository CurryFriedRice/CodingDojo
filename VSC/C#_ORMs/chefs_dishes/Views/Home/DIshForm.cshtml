@{
    ViewData["Title"] = "Dish Form Submission";
}
@model Dish
<a href="../">Back to Dishes</a>
<h1>Submit a dish!!</h1>
<form action="Validate" method="POST" class="d-flex flex-column"> 
    <span asp-validation-for="Name" class='text-danger'></span>
    <div class="d-flex justify-content-between">
    <label asp-for="Name"></label>
    <input asp-for="Name">
    </div>

        
    <span asp-validation-for="Calories" class='text-danger'></span>
    <div class="d-flex justify-content-between">
        <label asp-for="Calories"></label>
        <input asp-for="Calories">
    </div>


    <span asp-validation-for="Tastiness" class='text-danger'></span>
    <div class="d-flex justify-content-between">
        <label asp-for="Tastiness"></label>
        <select asp-for="Tastiness">
            <option value=1>1</option>
            <option value=2>2</option>
            <option value=3>3</option>
            <option value=4>4</option>
            <option value=5>5</option>
        </select>
    </div>
    <span asp-validation-for="Descripiton" class='text-danger'></span>
    <div class="d-flex justify-content-between">
        <label asp-for="Descripiton"></label>
        <textarea asp-for="Descripiton"></textarea>
    </div>

    <span asp-validation-for="ChefId" class='text-danger'></span>
    <div class="d-flex justify-content-between">
        <label asp-for="ChefId"></label>
        <select asp-for="ChefId">
            @foreach(var chef in ViewBag.Chefs){
                <option value=@chef.ChefId>@chef.FirstName @chef.LastName</option>
            }
        </select>
    </div>

    <button>Submit a Dish!</button>
</form>