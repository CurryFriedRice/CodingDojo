@using Stripe
@model OrderModel

<form asp-action="add" asp-controller="Orders" style="width:510px">
    <p>Add a new order</p>
    <div>
    <label asp-for="CustomerID" style="width:100px"></label>
    <select asp-for="CustomerID" style="width:400px">
        @foreach (Customer Customer in ViewBag.Customers)
        {
        <option value="@Customer.Id">@Customer.Name</option>           
        }
    </select>
    </div>
    <div>
    <span asp-validation-for="Quantity"></span>
    <label asp-for="Quantity"  style="width:100px"></label>
    <select asp-for="Quantity" style="width:50px">
        @for(int i = 1; i < 100; i++)
        {
            <option value=@i>@i</option>
        }
    </select>
    <label asp-for="ProductID" style="width:100px"></label>
    <select asp-for="ProductID" style="width:240px">
        @foreach (Product Product in ViewBag.Products)
        {
        <option value="@Product.Id">@Product.Name</option>           
        }
    </select>
    </div>
    <div class="d-flex justify-content-end">
    <button class="btn btn-primary">Submit</button>
    </div>
</form>