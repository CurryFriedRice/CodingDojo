@model SubmissionModel

<h1>Post a message</h1>
<form asp-action="new" asp-controller="message">
    <textarea asp-for="Message"></textarea>
    <button class="btn btn-primary">Post a Message</button>
</form>


@foreach(Messages Message in ViewBag.Messages)
{
    <div>

    <h2>@Message.User.FullName - @Message.</h2>
    <p>@Message.Message</p>
        <div>
            foreach(Comments Comment in Message.Comments)
            {
                <h2>@Message.User.FullName - @Message.</h2>
                <p>@Message.Message</p>
            }
        <form asp-action="new" asp-controller="Comment">
            <input hidden asp-for="MessageID" value=@Message.MessageID>
            <textarea asp-for="Message"></textarea>
            <button class="btn btn-primary">Post a Message</button>
        </form>
        </div>
    
    </div>
}