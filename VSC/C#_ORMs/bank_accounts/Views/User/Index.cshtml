@{
    ViewData["Title"] = "Create New Account";
}

@model User
 <div style="width: 600px; margin: 0px auto;">
<h1>Register</h1> 
<div>
<a asp-action="login" asp-controller="user">Already have an account?</a>
<form method="POST" asp-action="new" asp-controller="user">
    <span asp-validation-for="FirstName" class="text-danger"></span>
    <div class="d-flex justify-content-between">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName">
    </div>

    <span asp-validation-for="LastName" class="text-danger"></span>
    <div class="d-flex justify-content-between">
        <label asp-for="LastName"></label>
        <input asp-for="LastName">
    </div>

    <span asp-validation-for="Email" class="text-danger"></span>
    <div class="d-flex justify-content-between">
        <label asp-for="Email"></label>
        <input asp-for="Email">
    </div>

    <span asp-validation-for="Email_Confirm" class="text-danger"></span>
    <div class="d-flex justify-content-between">
        <label asp-for="Email_Confirm"></label>
        <input asp-for="Email_Confirm">
    </div>

    
    <span asp-validation-for="Password" class="text-danger"></span>
    <div class="d-flex justify-content-between">
        <label asp-for="Password"></label>
        <input asp-for="Password">
    </div>

    
    <span asp-validation-for="Password_Confirm" class="text-danger"></span>
    <div class="d-flex justify-content-between">
        <label asp-for="Password_Confirm"></label>
        <input asp-for="Password_Confirm">
    </div>

    <button>Submit</button>
</form>
</div>
</div>