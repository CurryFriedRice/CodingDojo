@{
  ViewData["Title"] = "Survey Form";
}

@model SurveyResponse


    <div class="container position-absolute top-50 start-50 translate-middle bg-primary p-3 text-light rounded shadow">

    <form class="d-flex flex-column" asp-controller="Survey" asp-action="Result" method="post">
        <span asp-validation-for="Name" class="text-danger  mt-3"></span>
        <div class="d-flex justify-content-between">
        <label asp-for="Name"></label>
        <input  type="text" asp-for = "Name" placeholder="Name" class="inputWidth rounded p-1">
        </div>
        
        <span asp-validation-for="Place" class="text-danger mt-3"></span>
        <div class="d-flex justify-content-between">
        <label asp-for = "Place"></label>
        <select asp-for="Place" class="inputWidth form-select">
            <option type = 'text' value ='NONE' >--Select a Place--</option>
            @{
                foreach(string place in ViewBag.Locations)
                {
                    <option type="text" value="@place">@place</option>
                }
            }
        </select>
        </div>
        
        
        <span asp-validation-for="Activity" class="text-danger mt-3"></span>
        <div class="d-flex justify-content-between">
        <label asp-for="Activity">What we doin?</label>
        <select asp-for="Activity" class="inputWidth form-select">
            <option type = 'text' value ='NONE' >--Select an Activity--</option>
            @{
                foreach(string activity in ViewBag.Activities)
                {
                    <option type="text"  value="@activity">@activity</option>
                }
            }
        </select>
        </div>
        <span asp-validation-for="Comment" class="text-danger mt-3"></span>
        <label asp-for="Comment" class="mt-3">Anything else?</label>
        <textarea type="text"  asp-for="Comment" placeholder="Any concerns?" class="p-1 rounded"></textarea>
        <button class="btn btn-warning smaller  mt-3">Submit</button>
    </form>
    </div>
