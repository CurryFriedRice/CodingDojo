@model Register

<form method="POST" asp-action="Register" asp-controller="Home">
    <span asp-validation-for="FirstName" class="mt-3 text-danger"></span>
    <div class="d-flex justify-content-between mt-1">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" placeholder="FirstName">
    </div>
    <span asp-validation-for="LastName" class="mt-3 text-danger"></span>
    <div class="d-flex justify-content-between mt-1">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" placeholder="LastName">
    </div>

    <span asp-validation-for="Email"  class="mt-3 text-danger"></span>
    <span asp-validation-for="Email_Confirm"  class="mt-3 text-danger"></span>
    <div class="d-flex justify-content-between mt-1">
        <label asp-for="Email"></label>
        <input asp-for="Email" placeholder="Email">
    </div>
    <div class="d-flex justify-content-between mt-1">
        <label asp-for="Email_Confirm"></label>
        <input asp-for="Email_Confirm" placeholder="Email">
    </div>


    <span asp-validation-for="Password"  class="mt-3 text-danger"></span>
    <span asp-validation-for="Password_Confirm"  class="mt-3 text-danger"></span>
    <div class="d-flex justify-content-between mt-1">
        <label asp-for="Password"></label>
        <input asp-for="Password" placeholder="Password">
    </div>
    <div class="d-flex justify-content-between mt-1">
        <label asp-for="Password_Confirm"></label>
        <input asp-for="Password_Confirm" placeholder="Password">
    </div>


    

    <button class="btn btn-primary">Submit</button>
    
</form>
