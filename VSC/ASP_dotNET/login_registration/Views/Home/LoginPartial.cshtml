@model Login
<form method="POST" asp-action="Login" asp-controller="Home">
    <span asp-validation-for="Email" class="mt-3 text-danger"></span>
    <div class="d-flex justify-content-between mt-1">
        <label asp-for="Email"></label>
        <input asp-for="Email" placeholder="Email">
    </div>

    <span asp-validation-for="Password"  class="mt-3 text-danger"></span>
    <div class="d-flex justify-content-between mt-1">
        <label asp-for="Password"></label>
        <input asp-for="Password" placeholder="Password">
    </div>

    <button class="btn btn-primary">Submit</button>
    
</form>
